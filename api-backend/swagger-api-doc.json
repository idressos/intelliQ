  "components" : {
    "schemas" : {
      "Questionnaire" : {
        "type" : "object",
        "required" : [ "questionnaireID", "questionnaireTitle", "keywords", "questions" ],
        "properties" : {
          "questionnaireID" : {
            "type" : "string",
            "example" : "QQ000"
          },
          "questionnaireTitle" : {
            "type" : "string",
            "example" : "Student Feedback Questionnaire"
          },
          "keywords" : {
            "type" : "array",
            "items" : {
              "type" : "string",
              "example" : "college"
            },
            "uniqueItems" : true
          },
          "questions" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Question_Basic"
            }
          }
        }
      },
      "Questionnaire_Basic" : {
        "type" : "object",
        "required" : [ "questionnaireID", "questionnaireTitle" ],
        "properties" : {
          "questionnaireID" : {
            "type" : "string",
            "example" : "QQ000"
          },
          "questionnaireTitle" : {
            "type" : "string",
            "example" : "Student Feedback Questionnaire"
          }
        }
      },
      "Question" : {
        "type" : "object",
        "required" : [ "qID", "qtext", "required", "type", "options" ],
        "properties" : {
          "qID" : {
            "type" : "string",
            "example" : "Q00"
          },
          "qtext" : {
            "type" : "string",
            "example" : "What is your field of study?"
          },
          "required" : {
            "type" : "string",
            "enum" : [ "TRUE", "FALSE" ]
          },
          "type" : {
            "type" : "string",
            "enum" : [ "question", "profile" ]
          },
          "options" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Option"
            }
          }
        }
      },
      "Question_Basic" : {
        "type" : "object",
