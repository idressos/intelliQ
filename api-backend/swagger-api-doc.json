        "properties" : {
          "qID" : {
            "type" : "string",
            "example" : "Q00"
          },
          "qtext" : {
            "type" : "string",
            "example" : "What is your field of study?"
          },
          "required" : {
            "type" : "string",
            "enum" : [ "TRUE", "FALSE" ]
          },
          "type" : {
            "type" : "string",
            "enum" : [ "question", "profile" ]
          }
        }
      },
      "Option" : {
        "type" : "object",
        "required" : [ "optID", "opttxt", "nextqID" ],
        "properties" : {
          "optID" : {
            "type" : "string",
            "example" : "Q00A0"
          },
          "opttxt" : {
            "type" : "string",
            "example" : "Computer Science"
          },
          "nextqID" : {
            "type" : "string",
            "example" : "Q01"
          }
        }
      },
      "Keyword" : {
        "type" : "object",
        "required" : [ "keywordID", "keywordText" ],
        "properties" : {
          "keywordID" : {
            "type" : "integer",
            "example" : 0
          },
          "keywordText" : {
            "type" : "string",
            "example" : "college"
